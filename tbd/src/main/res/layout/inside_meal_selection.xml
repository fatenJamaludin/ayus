<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/mealIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/meal_drag"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/mealImage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/arrow_out_icon"
                app:civ_border_color="@color/grey"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/grey_light"
                app:civ_shadow_radius="1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtMealName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMealPts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/default_theme_colour"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
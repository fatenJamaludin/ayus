<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="1"
        android:layout_marginBottom="10dp">

        <com.app.tbd.utils.FontStyle.PlayTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:text="@string/option_reset_password_text"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <com.app.tbd.utils.FontStyle.PlayTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:layout_marginLeft="15dp"
            android:hint="@string/email"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.app.tbd.utils.FontStyle.PlayEditText
            android:id="@+id/txtResetThisEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/drawable_login_bottom_border"
            android:hint="@string/forgot_password_email"
            android:padding="10dp"
            android:layout_marginTop="-3dp"
            android:layout_marginLeft="-5dp"
            android:textColorHint="@color/grey"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>



    </LinearLayout>


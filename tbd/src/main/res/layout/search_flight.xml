<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_gradient_background_color"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <!--Round Button (OneWay & ReturnTrip)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/btnOneWay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/search_flight_button_transparent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:id="@+id/txtOneWay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/book_flight_one_way"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnReturn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/login_login_button_clicked"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:id="@+id/txtReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:text="@string/book_flight_return"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/default_theme_colour"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!--Promo Message-->
        <LinearLayout
            android:id="@+id/promo_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_80op"
            android:gravity="center"
            android:visibility="gone">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/flight_search_promo_message"
                android:textColor="@color/black" />


        </LinearLayout>

        <!--Search Form-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15sp"
            android:orientation="vertical"
            android:padding="15dp">


            <LinearLayout
                android:id="@+id/btnDepartClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.app.tbd.utils.FontStyle.PlayTextView
                        android:id="@+id/playTextView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="0.95"
                        android:text="@string/flight_list_daparture"
                        android:textColor="@color/grey_light"
                        android:textSize="15sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/btnDepartureFlight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:orientation="vertical"
                        android:paddingTop="2dp"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="3dp"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.05"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:src="@drawable/icon_depart" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.85"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <com.app.tbd.utils.FontStyle.PlayTextView
                                    android:id="@+id/txtDepartureFlight"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:layout_weight="0.95"
                                    android:drawablePadding="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="@string/flight_search_select"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:textSize="18dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imageView14"
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right|center"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:src="@mipmap/back_icon_white" />


                            </LinearLayout>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="25dp"
                            android:background="#DDCFCF" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="right"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/txtSwapDestination"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="30dp"
                            android:elevation="8dp"
                            android:src="@mipmap/ic_change"
                            android:visibility="invisible" />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnReturnClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.app.tbd.utils.FontStyle.PlayTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="0.95"
                        android:text="@string/flight_search_destination"
                        android:textColor="@color/grey_light"
                        android:textSize="15sp" />
                </LinearLayout>

                <!--destination-->
                <LinearLayout
                    android:id="@+id/btnArrivalFlight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp"
                    android:paddingTop="0dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:src="@drawable/icon_destination" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.app.tbd.utils.FontStyle.PlayTextView
                            android:id="@+id/txtArrivalFlight"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_weight="0.95"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:hint="@string/flight_search_select"
                            android:paddingLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical|right"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="right|center"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@mipmap/back_icon_white" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:background="#DDCFCF" />

            <!--Date Two Way-->
            <LinearLayout
                android:id="@+id/block_date_round_trip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <!--DARI SINI 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.06"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_date" />

                </LinearLayout>
                <!--DARI SINI 1-->

                <!--DARI SINI 2-->
                <LinearLayout
                    android:id="@+id/departure_block_enlarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.47"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.app.tbd.utils.FontStyle.PlayTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:text="@string/flight_search_depart_date"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/departureDateBlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="0dp"
                            android:weightSum="1">

                            <com.app.tbd.utils.FontStyle.PlayTextView

                                android:id="@+id/bookFlightDepartureDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center_vertical"
                                android:hint="@string/flight_select_depart_date"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right|center"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:src="@mipmap/back_icon_white" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--underline for departure
 date-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDCFCF"
                        android:paddingLeft="10dp" />

                </LinearLayout>
                <!--SAMPAI SINI 2-->

                <!--DARI SINI 3-->
                <LinearLayout
                    android:id="@+id/returnDateLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.47"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/returnDateTilt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.app.tbd.utils.FontStyle.PlayTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingBottom="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="5dp"
                            android:text="@string/flight_search_return_date"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/returnDateBlock"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="0dp"
                            android:weightSum="1">

                            <com.app.tbd.utils.FontStyle.PlayTextView

                                android:id="@+id/bookFlightReturnDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:gravity="center_vertical"
                                android:hint="@string/flight_select_depart_date"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right|center"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:src="@mipmap/back_icon_white" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--underline for departure date-->
                    <View
                        android:id="@+id/returnLine"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginRight="-2dp"
                        android:background="#DDCFCF" />

                </LinearLayout>
                <!--SAMPAI SINI 3-->

            </LinearLayout>

            <!--Date One Way-->
            <LinearLayout
                android:id="@+id/block_date_one_way"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">

                <!--DARI SINI 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.06"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/icon_date" />

                </LinearLayout>

                <!--DARI SINI 2-->
                <LinearLayout
                    android:id="@+id/departure_block"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.94"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <com.app.tbd.utils.FontStyle.PlayTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.95"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:text="@string/flight_search_depart_date"
                            android:textColor="@color/grey_light"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/departureDateBlock2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="0dp"
                            android:weightSum="1">

                            <com.app.tbd.utils.FontStyle.PlayTextView

                                android:id="@+id/bookFlightDepartureDate2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="center_vertical"
                                android:hint="@string/flight_select_depart_date"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:gravity="center_vertical|right"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:layout_gravity="right|center"
                                    android:scaleX="0.7"
                                    android:scaleY="0.7"
                                    android:src="@mipmap/back_icon_white" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!--underline for departure
 date-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DDCFCF"
                        android:paddingLeft="10dp" />
                </LinearLayout>
                <!--SAMPAI SINI 2-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:text="@string/flight_search_passenger"
                    android:textColor="@color/grey_light"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/passengerQty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:src="@mipmap/icon_passenger" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.app.tbd.utils.FontStyle.PlayTextView
                        android:id="@+id/txtPassengerQty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="@string/flight_search_adult"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center_vertical|right"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="right|center"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@mipmap/back_icon_white" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="25dp"
                android:background="#DDCFCF" />

        </LinearLayout>

        <!--Reset & Search button-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.16"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:weightSum="1">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:weightSum="1">-->

            <!--<LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:orientation="vertical"></LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resetLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="@string/flight_search_reset"
                    android:textColor="@color/white"
                    android:textSize="17dp" />

                <!--</LinearLayout>-->

            </LinearLayout>

            <ImageView
                android:id="@+id/btnSearchFlight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="8dp"
                android:src="@mipmap/ic_search_white" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtPassenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/info_traveller2"
            android:textColor="@color/default_theme_colour"
            android:textStyle="bold" />

        <!--INFANT-->
        <LinearLayout
            android:id="@+id/infantBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/travellingWithBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/info_travel_with"
                    android:textColor="@color/dark_lvl4"
                    android:textSize="15sp" />

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:id="@+id/txtTravellingWith"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:drawableRight="@drawable/icon_down_red"
                    android:gravity="center_vertical"
                    android:hint="@string/info_select_one"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColorHint="@color/dark_lvl2"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/infantGender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/info_gender_title"
                android:textColor="@color/dark_lvl4"
                android:textSize="15sp" />

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:id="@+id/txtInfantGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_login_bottom_border"
                android:drawableRight="@drawable/icon_down_red"
                android:gravity="center_vertical"
                android:hint="@string/info_select_one"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/dark_lvl2"
                android:textSize="16dp" />

        </LinearLayout>

        <!--INFANT-->

        <!--SALUTATION-->
        <LinearLayout
            android:id="@+id/salutationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:paddingLeft="10dp"
                android:text="@string/info_salutation_title"
                android:textColor="@color/dark_lvl4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/salutationBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:weightSum="1">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:id="@+id/txtSalutation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/drawable_login_bottom_border"
                android:drawableRight="@drawable/icon_down_red"
                android:gravity="center_vertical"
                android:hint="@string/info_select_one"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/dark_lvl2"
                android:textSize="16dp" />

        </LinearLayout>
        <!--SALUTATION-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtGivenName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:hint="@string/info_given_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/dark_lvl2"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtFamilyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:hint="@string/info_family_name"
                    android:inputType="textPersonName"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColorHint="@color/dark_lvl2"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:paddingLeft="10dp"
                android:text="@string/info_date_birth"
                android:textColor="@color/dark_lvl4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dobLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:visibility="visible"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.app.tbd.utils.FontStyle.PlayTextView
                    android:id="@+id/txtDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_login_bottom_border"
                    android:gravity="center_vertical"
                    android:hint="@string/info_select_birth"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColorHint="@color/dark_lvl2"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:paddingRight="10dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:paddingLeft="10dp"
                android:text="@string/info_nationality"
                android:textColor="@color/dark_lvl4"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/nationalityBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="visible"
            android:weightSum="1">

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:id="@+id/txtNationality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/drawable_login_bottom_border"
                android:drawableRight="@drawable/icon_down_red"
                android:gravity="center_vertical"
                android:hint="@string/info_select_one"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/dark_lvl2"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
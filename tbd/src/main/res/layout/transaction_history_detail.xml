<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactionDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_light"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey_light">

        <LinearLayout
            android:id="@+id/profile_language_country_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.07"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/transaction_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:src="@drawable/arrow_in_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

            </LinearLayout>

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:id="@+id/txtTransactionDate"
                android:clickable="false"
                android:text="10 September"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textSize="15dp"
                android:textColor="@color/sign_in_button_click"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

            </LinearLayout>

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:id="@+id/txtHistoryPoints"
                android:clickable="false"
                android:text="+1,200 pts"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.47"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textSize="15dp"
                android:gravity="center_vertical|right"
                android:textColor="@color/sign_in_button_click"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center_vertical|right"
                android:orientation="vertical">

            </LinearLayout>

            <com.app.tbd.utils.FontStyle.PlayTextView
                android:clickable="false"
                android:textStyle="italic|bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:lines="2"
                android:padding="5dp"
                android:textSize="15dp"
                android:id="@+id/txtHistoryMerchant"
                android:layout_marginTop="-5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:top="0dp" android:bottom="90dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ECECEE"
                android:endColor="#FCFCFC"
                android:angle="270"
                android:centerY="0.3"/>

        </shape>
    </item>

    <item android:top="30dp" android:bottom="30dp" >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

    <item android:top="90dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FCFCFC"
                android:endColor="#ECECEE"
                android:angle="90"
                android:centerY="0.3"/>
        </shape>
    </item>
</layer-list>


